<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIvory"
    android:orientation="vertical"
    tools:context=".Activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="40dp"
            android:textColor="@color/colorTeal"
            android:text="Account Registration" />

        <EditText
            android:id="@+id/editText_Reg_Fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_edittext_rounded"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorTeal"
            android:hint="Enter Full name" />

        <EditText
            android:id="@+id/editText_Reg_EmailAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:textColorHint="@color/colorTeal"
            android:background="@drawable/layout_edittext_rounded"
            android:inputType="textPersonName"
            android:hint="Enter Email Address" />

        <EditText
            android:id="@+id/editText_Reg_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:textColorHint="@color/colorTeal"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_edittext_rounded"
            android:inputType="textPersonName"
            android:hint="Enter Username" />

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/editText_Reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_edittext_rounded"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/colorTeal"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword" />

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/editText_Reg_CPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="15dp"
            android:background="@drawable/layout_edittext_rounded"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/colorTeal"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button_SignUp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_edittext_rounded"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/colorTeal"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/colorTeal"
                android:textSize="12sp"
                android:text="Already Sign Up?" />

            <TextView
                android:id="@+id/textView_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/colorTeal"
                android:textSize="12sp"
                android:text="Login" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>